    {
      "name": "String to vector",
      "id": 3,
      "type": "ReflexStringToLabeledVectorComponent",
      "parents": [
        {
          "parent": 1,
          "output": 0
        }
      ],
      "arguments": {
        "separator": ",",
        "attributes": 3,
        "indicesRange": "0-2"
      }
    },
    {
      "name": "OnlineKMeans",
      "id": 4,
      "type": "OnlineKmeansComponent",
      "parents": [
        {
          "parent": 2,
          "output": 0
        },
        {
          "parent": 3,
          "output": 0
        }
      ],
      "arguments": {
        "centroidCount": 2,
        "attributes": 3,
        "modelInit": "provided",
        "modelPath": "/Users/yakov/pmkmeans_centroids.csv",
        "printInterval": 1,
        "enablePerformance": true
      }
    },
    {
      "name": "printer",
      "id": 5,
      "type": "ReflexStdoutConnector",
      "parents": [
        {
          "parent": 4,
          "output": 0
        }
      ]
    },
    {
      "name": "printer",
      "id": 6,
      "type": "ReflexStdoutConnector",
