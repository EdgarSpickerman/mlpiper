    "modelFileSinkPath": "/tmp/tmpFile"
  },
  "pipe": [
    {
      "name": "Turbine 1",
      "id": 1,
      "type": "ReflexFileConnector",
      "parents": [],
      "arguments": {
        "fileName": "/Users/yakov/pmkmeans_input.csv"
      }
    },
    {
      "name": "Model updater",
      "id": 2,
      "type": "ReflexModelSourceConnector",
      "parents": []
